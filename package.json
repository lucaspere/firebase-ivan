{
    "name": "node.js_webdevelopment_notesapp",
    "version": "1.0.0",
    "description": "Project made based on studies from the book Node.js WebDevelopment Fifth Edition",
    "main": "src/app.js",
    "engines": {
        "node": "14.x"
    },
    "scripts": {
        "start": "node dist/app.js",
        "build": "tsc",
        "dev": "ts-node-dev --inspect -r dotenv/config src/app.ts",
        "test": "npm run test:integration && npm run test:unit",
        "test:unit": "LEVELDB_LOCATION=notes.level.test mocha --config mocharc.unit.yaml",
        "test:integration": "TEST_PORT=3001 mocha --config mocharc.integration.yaml",
        "cover": "npm run cover:unit && npm run cover:integration && npm run cover:report",
        "cover:unit": "nyc npm run test:unit",
        "cover:integration": "nyc --silent --no-clean npm run test:integration",
        "cover:report": "nyc report --reporter=lcov"
    },
    "author": "Lucas Pereira",
    "license": "ISC",
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/chai": "^4.3.1",
        "@types/mocha": "^9.1.0",
        "@types/node": "^16.6.1",
        "@types/sinon": "^10.0.11",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^4.29.2",
        "@typescript-eslint/parser": "^4.29.2",
        "chai": "^4.3.6",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-import": "^2.24.0",
        "eslint-plugin-prettier": "^3.4.0",
        "mocha": "^9.2.2",
        "nyc": "^15.1.0",
        "prettier": "^2.3.2",
        "sinon": "^13.0.2",
        "source-map-support": "^0.5.21",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.3.5"
    },
    "dependencies": {
        "dotenv": "^16.0.0",
        "fastify": "^3.28.0",
        "fastify-cors": "^6.0.3",
        "fastify-plugin": "^3.0.1",
        "fastify-postgres": "^3.6.0",
        "fastify-swagger": "^5.1.0",
        "level": "^8.0.0",
        "pino-pretty": "^7.6.1",
        "uuid": "^8.3.2"
    }
}
